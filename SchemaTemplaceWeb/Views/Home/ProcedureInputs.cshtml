@model SchemaTemplaceWeb.Models.ProcedureInputViewModel
@{
    ViewData["Title"] = "Procedure Parameters";
}

<style>
    body {
        background-color: #121212;
        color: #e0e0e0;
    }
    .card {
        background-color: #1e1e1e;
        border: 1px solid #333;
        border-radius: 0.5rem;
    }
    .form-control {
        background-color: #2d2d2d;
        border: 1px solid #444;
        color: #fff;
    }
    .form-control:focus {
        background-color: #2d2d2d;
        color: #fff;
        border-color: #9c27b0;
        box-shadow: 0 0 0 0.25rem rgba(156, 39, 176, 0.25);
    }
    .form-control::placeholder {
        color: #6c757d;
    }
    .btn-custom-purple {
        background-color: #9c88cc;
        border-color: #9c88cc;
        color: #000;
        font-weight: 500;
    }
    .btn-custom-purple:hover {
        background-color: #8571b8;
        border-color: #8571b8;
        color: #000;
    }
    .btn-custom-clear {
        background-color: #e0e0e0;
        border-color: #e0e0e0;
        color: #000;
        font-weight: 500;
    }
    .btn-custom-clear:hover {
        background-color: #d6d6d6;
        border-color: #d6d6d6;
        color: #000;
    }
    .text-instruction-muted {
        color: #888;
        font-style: italic;
    }
    label {
        font-weight: 500;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card p-4 shadow-lg">
                <h2 class="mb-2">Enter Parameters</h2>
                <p class="text-instruction-muted mb-4">Procedure: <strong>@Model.ProcedureName</strong></p>

                <form method="post" action="@Url.Action("Execute", "Procedure")">
                    <!-- Hidden field to pass the procedure name -->
                    <input type="hidden" name="ProcedureName" value="@Model.ProcedureName" />

                    @if (Model.Parameters != null && Model.Parameters.Count > 0)
                    {
                        <div>
                            @foreach (var param in Model.Parameters)
                            {
                                <div class="row align-items-center mb-4">
                                    <label for="@param.Name" class="col-sm-4 col-form-label text-end">@param.Name</label>
                                    <div class="col-sm-8 position-relative">
                                        <input type="text"  
                                               class="form-control procedure-param-input" 
                                               id="@param.Name" 
                                               name="@param.Name" 
                                               data-type="@param.DataType"
                                               value="@(param.HasDefaultValue ? param.DefaultValue : "")"
                                               placeholder="@param.DataType">
                                        <div class="invalid-feedback text-danger" style="display:none; font-size: 0.8rem; position: absolute; bottom: -20px; left: 12px;"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-dark" role="alert">
                            No parameters required for this procedure. Please click Submit to proceed.
                        </div>
                    }

                    <hr class="border-secondary my-4">

                    <div class="d-flex justify-content-end gap-3">
                        <button type="reset" class="btn btn-custom-clear px-4">Clear Data</button>
                        <button type="submit" class="btn btn-custom-purple px-4">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        function validateInput(input) {
            var type = $(input).data('type');
            if (!type) return { isValid: true };
            
            type = type.toLowerCase();
            var value = $.trim($(input).val());
            var isValid = true;
            var errorMessage = "";

            if (value === "") {
                return { isValid: false, message: "This field is required." }; 
            }

            var intPattern = /^-?\d+$/;
            var decimalPattern = /^-?\d+(\.\d+)?$/;

            if (type.indexOf("int") !== -1 || type.indexOf("byte") !== -1) {
                if (!intPattern.test(value)) {
                    isValid = false;
                    errorMessage = "Please enter a valid integer.";
                }
            }
            else if (type.indexOf("decimal") !== -1 || type.indexOf("numeric") !== -1 || type.indexOf("float") !== -1 || type.indexOf("money") !== -1 || type.indexOf("real") !== -1) {
                if (!decimalPattern.test(value)) {
                    isValid = false;
                    errorMessage = "Please enter a valid number.";
                }
            }
            // For varchar/string types, we consider them valid if not empty (empty check is above)
            // But we should return valid if checking specific type fails but type is actually string-ish
            // The empty check `if (value === "")` handles requiredness.
            // If we reach here and no specific type matched, it's valid.
            else if (type.indexOf("date") !== -1 || type.indexOf("time") !== -1) {
                if (isNaN(Date.parse(value))) {
                    isValid = false;
                    errorMessage = "Please enter a valid date (e.g., YYYY-MM-DD).";
                }
            }
            else if (type.indexOf("bit") !== -1 || type.indexOf("boolean") !== -1) {
               var valLower = value.toLowerCase();
               if (valLower !== "true" && valLower !== "false" && valLower !== "1" && valLower !== "0") {
                   isValid = false;
                   errorMessage = "Please enter true, false, 1, or 0.";
               }
            }
            else if (type.indexOf("uniqueidentifier") !== -1) {
                // optional: guid regex
                var guidPattern = /^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$/i;
                if (!guidPattern.test(value)) {
                     isValid = false;
                     errorMessage = "Please enter a valid GUID.";
                }
            }

            return { isValid: isValid, message: errorMessage };
        }

        $('.procedure-param-input').on('blur', function () {
            var validation = validateInput(this);
            var errorDiv = $(this).next('.invalid-feedback');
            
            if (!validation.isValid) {
                $(this).addClass('is-invalid');
                errorDiv.text(validation.message).show();
            } else {
                $(this).removeClass('is-invalid');
                errorDiv.hide();
            }
        });

        $('.procedure-param-input').on('keyup input', function () {
            var validation = validateInput(this);
            var errorDiv = $(this).next('.invalid-feedback');
            
            // On typing, if valid, remove error. If invalid, keep existing error state (don't show new error immediately while typing)
            if (validation.isValid) {
                 $(this).removeClass('is-invalid');
                 errorDiv.hide();
            }
        });

        // Handle Clear Data button
        $('button[type="reset"]').on('click', function() {
            setTimeout(function() {
                $('.procedure-param-input').removeClass('is-invalid');
                $('.invalid-feedback').hide();
            }, 10); // slightly delayed to allow native reset to happen first
        });

        $('form').on('submit', function (e) {
            var isFormValid = true;
            $('.procedure-param-input').each(function () {
                var validation = validateInput(this);
                if (!validation.isValid) {
                    isFormValid = false;
                    $(this).addClass('is-invalid');
                    $(this).next('.invalid-feedback').text(validation.message).show();
                }
            });

            if (!isFormValid) {
                e.preventDefault();
            }
        });
    });
</script>
